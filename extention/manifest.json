{
"manifest_version": 3,
"name": "Side Panel Text Reader",
"version": "1.0",
"description": "Reads webpage text and displays it in a side panel",
"permissions": ["cookies","sidePanel", "activeTab", "scripting","tabs"],
"host_permissions": [
    "<all_urls>"
  ],
"background": {
"service_worker": "background.js"
},
"side_panel": {
"default_path": "sidepanel.html"
},
"action": {
"default_title": "Open Side Panel"
}
}